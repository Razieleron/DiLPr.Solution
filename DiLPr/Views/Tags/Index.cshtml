@{
    ViewData["Title"] = "Browse";
}

@using DiLPr.Models;

<h1>Check out pupprs based on your interests</h1>

@if (@Model.Count == 0)
{
  <h3>No interests have been added yet!</h3>
} 

@foreach (Tag tag in Model)
{
  <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId })</li>
}

<br />
<a href="/Tags/Create">
  <button>Add a new interest</button>
</a>