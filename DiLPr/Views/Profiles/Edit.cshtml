@model DiLPr.Models.Profile

@{
  ViewData["Title"] = $"Edit {Model.Name}'s Profile";
}

<h2>Edit @Model.Name's profile</h2>


@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ProfileId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Breed)
  @Html.EditorFor(model => model.Breed)
  <br>
  @Html.LabelFor(model => model.Age)
  @Html.EditorFor(model => model.Age)
  <br>
  @Html.Label("About me")
  @Html.TextAreaFor(model => model.Details)
  <br><br>
  <input type="submit" value="Save" id="green-button"/>
}

<br>
<h5>@Html.ActionLink("Cancel", "Index", new { id = @Model.ProfileId })</h5>